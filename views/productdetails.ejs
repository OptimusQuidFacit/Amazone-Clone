        const item="<%=product%>";
        const buyBtn=document.querySelector('.buy-link');
        document.querySelector('.buy-link').onclick=(e)=>{

            e.preventDefault();
        const quantity=document.querySelector('#qty').value ? document.querySelector('#qty').value: 1;
        let userId=localStorage.getItem('authId');
        let userToken=localStorage.getItem('authToken');
        let  url=   userToken ? `/buy/${userId.toString()}?id=${buyBtn.getAttribute('data-id')}&qty=${quantity}`:"";
        let geturl = userToken ? `/buy/${userId.toString()}`:"";
        
        let options={
            method:'POST',
            headers:{
                'Content-type': 'application/json',
                'token': `Bearer ${userToken?userToken.toString():""}`
        },}
            fetch(url, options).then(res=>{
                if(res.ok)
                window.location.href=geturl;
            else{
                alert("Please Login")
            }
            })
        }
        let deleteBtn = document.querySelector('.delete-link');
        deleteBtn.onclick=(e)=>{
            e.preventDefault();
            let userToken=localStorage.getItem('authToken');
            let userId=localStorage.getItem('authId');
            let url=`/products/delete/${userId.toString()}?id=${deleteBtn.getAttribute("data-id")}`
            let options={
                method: 'DELETE',
                headers: {
                    'Content-type': 'application/json',
                'token': `Bearer ${userToken.toString()}`
                },
            }
            fetch(url, options).then(res=>{
            if(res.ok){
                geturl=`/product?id=${this.getAttribute("data-id")}`
                window.location.href=geturl;
            }}
            );
        }
        document.querySelector('.product').onclick=()=>{
        const sideMenu =document.querySelector('#sidemenu');
            if (sideMenu.classList.contains('hidden')) {
        sideMenu.classList.remove('hidden');
      } else {
        sideMenu.classList.add('hidden');
      }
        }
    </script>
